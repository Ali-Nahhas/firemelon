{
    "name": "firemelon",
    "version": "0.0.6",
    "main": "lib/index.js",
    "files": [
        "lib/**/*"
    ],
    "author": "Ali Allaf <ali.allaf@hypatia.tech>",
    "license": "MIT",
    "description": "A simple way to sync between WatermelonDB and Firestore",
    "types": "lib/index.d.ts",
    "scripts": {
        "test": "concurrently \"npm run run-emulator\" \"wait-on tcp:8080 && npm run exec-test && pid=$(lsof -i:8080 -t); kill -TERM $pid || kill -KILL $pid\"",
        "exec-test": "jest --coverage --runInBand --forceExit",
        "test:watch": "jest --coverage --watch --runInBand",
        "build": "tsc",
        "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
        "lint": "tslint -p tsconfig.json",
        "version": "git add -A src",
        "postversion": "git push && git push --tags",
        "run-emulator": "firebase emulators:start --only firestore"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AliAllaf/firemelon.git"
    },
    "keywords": [
        "Firestore",
        "WatermelonDB",
        "Firebase",
        "Sync",
        "Synchronization"
    ],
    "bugs": {
        "url": "https://github.com/AliAllaf/firemelon/issues"
    },
    "homepage": "https://github.com/AliAllaf/firemelon#readme",
    "devDependencies": {
        "@babel/plugin-proposal-class-properties": "^7.5.5",
        "@babel/plugin-proposal-decorators": "^7.6.0",
        "@babel/plugin-transform-runtime": "^7.6.2",
        "@firebase/testing": "^0.14.2",
        "@types/jest": "^24.0.20",
        "@types/lodash": "^4.14.144",
        "concurrently": "^5.0.0",
        "firebase-tools": "^7.6.2",
        "jest": "^24.9.0",
        "lodash.clonedeep": "^4.5.0",
        "prettier": "^1.18.2",
        "ts-jest": "^24.1.0",
        "tslint": "^5.20.0",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.6.4",
        "wait-on": "^3.3.0",
        "worker-loader": "^2.0.0"
    },
    "dependencies": {
        "@nozbe/watermelondb": "^0.14.1",
        "lodash": "4.17.15"
    }
}
