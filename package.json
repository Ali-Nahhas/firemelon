{
    "name": "firemelon",
    "version": "0.0.11",
    "main": "lib/index.js",
    "files": [
        "lib/**/*"
    ],
    "author": "Ali Allaf <ali.allaf@hypatia.tech>",
    "license": "MIT",
    "description": "A simple way to sync between WatermelonDB and Firebase Firestore",
    "types": "lib/index.d.ts",
    "scripts": {
        "test": "firebase emulators:exec --only firestore \"npm run exec-test\"",
        "exec-test": "jest --coverage --runInBand --forceExit",
        "test:watch": "jest --coverage --watch --runInBand",
        "build": "tsc",
        "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
        "lint": "eslint -p tsconfig.json",
        "version": "git add -A src",
        "postversion": "git push && git push --tags",
        "run-emulator": "firebase emulators:start --only firestore"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AliAllaf/firemelon.git"
    },
    "keywords": [
        "Firestore",
        "WatermelonDB",
        "Firebase",
        "Sync",
        "Synchronization"
    ],
    "bugs": {
        "url": "https://github.com/AliAllaf/firemelon/issues"
    },
    "homepage": "https://github.com/AliAllaf/firemelon#readme",
    "devDependencies": {
        "@babel/plugin-proposal-class-properties": "^7.18.6",
        "@babel/plugin-proposal-decorators": "^7.28.0",
        "@babel/plugin-transform-runtime": "^7.28.5",
        "@firebase/rules-unit-testing": "^5.0.0",
        "@grpc/proto-loader": "^0.8.0",
        "@types/jest": "^30.0.0",
        "@types/lodash": "^4.17.21",
        "@typescript-eslint/eslint-plugin": "^8.47.0",
        "@typescript-eslint/parser": "^8.47.0",
        "concurrently": "^9.2.1",
        "dotenv": "^17.2.3",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "firebase": "9",
        "firebase-tools": "^14.26.0",
        "jest": "^30.2.0",
        "lodash.clonedeep": "^4.5.0",
        "prettier": "^3.6.2",
        "ts-jest": "^29.4.5",
        "typescript": "^5.9.3",
        "wait-on": "^9.0.3",
        "worker-loader": "^3.0.8"
    },
    "dependencies": {
        "@nozbe/watermelondb": "^0.28.0",
        "lodash": "^4.17.21"
    }
}
