{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "declarationDir": "./lib",
        "noImplicitAny": true,
        "moduleResolution": "node10",
        "lib": ["es2017", "es6", "es7"],
        "outDir": "./lib",
        "strict": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true
    },
    "typedocOptions": {
        "mode": "modules",
        "out": "docs"
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"]
}
